#include <iostream>

int main() {
    double num1, num2;

    std::cout << "Введіть перше число: ";
    std::cin >> num1;

    std::cout << "Введіть друге число: ";
    std::cin >> num2;

    double sum = num1 + num2;
    std::cout << "Сума: " << sum << std::endl;

    double diff = num1 - num2;
    std::cout << "Різниця: " << diff << std::endl;

    double product = num1 * num2;
    std::cout << "Добуток: " << product << std::endl;

    if (num2 != 0) {
        double quotient = num1 / num2;
        std::cout << "Частка: " << quotient << std::endl;
    } else {
        std::cout << "Ділення на нуль неможливе." << std::endl;
    }

    return 0;
}
